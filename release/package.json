{
	"name": "Ionide-fsharp",
	"version": "0.0.1",
	"publisher": "Krzysztof Cieslak",
	"engines": {
		"vscode": "^0.10.0"
	},
	"main": "./fsharp",
	"contributes": {
		"languages": [{
        "id": "fsharp",
        "extensions": [ ".fs", ".fsx", ".fsi" ]
    }],
		"grammars": [{
        "language": "fsharp",
        "scopeName": "source.fsharp",
        "path": "./syntaxes/fsharp.json"
        }],
		"commands": [{
			"command": "fsi.Start",
			"title": "FSI: Start"
		},{
			"command": "fsi.SendLine",
			"title": "FSI: Send Line"
		},{
			"command": "fsi.SendSelection",
			"title": "FSI: Send Selection"
		},{
			"command": "fsi.SendFile",
			"title": "FSI: Send File"
		}],
		"outputChannels": [
			"F# Interactive"
		]
	},
	"activationEvents": [
		"onLanguage:fsharp",
		"onCommand:fsi.Start",
		"onCommand:fsi.SendLine",
		"onCommand:fsi.SendSelection",
		"onCommand:fsi.SendFile"],
	"extensionDependencies": [
        "vscode.fsharp"
    ],
	"devDependencies": {
		"vscode": "*"
	}
}
